{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@models/*":[
        "./src/_models/*"
      ],
      "@middlewares/*":[
        "./src/middlewares/*"
      ]
    },
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },

  "include": [
    "*.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
